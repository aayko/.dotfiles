#!/bin/bash

# Increment, decrement, or mute the volume and send a notification
# of the current volume level.

send_notification() {
	volume=$(pamixer --get-volume)

    if [ "$volume" -gt 70 ]; then
        icon="high"
    elif [ "$volume" -gt 40 ]; then
        icon="medium"
    else
        icon="low"
    fi

    notify-send -a "volume" -t 2000 -r 9993 -u low -i "volume-$icon" -h int:value:"$volume" "Volume" "Currently at ${volume}%"
}

send_muted() {
    notify-send -a "volume" -t 2000 -r 9993 -u low -i "volume-mute" "Muted"
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pamixer -u
	pamixer -i 5
	send_notification
	;;
down)
    if [ "$(pamixer --get-volume)" -lt 6 ]; then
        pamixer -d 5
        pamixer -t
        send_muted
    else
        pamixer -u
        pamixer -d 5
        send_notification
    fi
	;;
mute)
	pamixer -t
	if eval "$(pamixer --get-mute)"; then
        send_muted
    elif [ "$(pamixer --get-volume)" -eq 0 ]; then
        pamixer -i 5
        send_notification
    else
        send_notification
    fi
	;;
esac
