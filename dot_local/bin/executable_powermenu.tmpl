#!/usr/bin/env bash

lock="lock"
hibernate="hibernate"
shutdown="shutdown"
reboot="reboot"
windows="windows"

{{ if .desktop -}}
options="$shutdown\n$reboot\n$windows"
{{ else -}}
options="$lock\n$hibernate\n$shutdown\n$reboot"
{{- end -}}

chosen="$(echo -e "$options" | dmenu)"
case $chosen in
    "$lock")
        lock
        ;;
    "$shutdown")
        systemctl poweroff
        ;;
    "$hibernate")
        systemctl hibernate
        lock
        ;;
    "$reboot")
        systemctl reboot
        ;;
    "$windows")
        systemctl reboot --boot-loader-entry=auto-windows
        ;;
esac
