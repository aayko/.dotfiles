#!/usr/bin/env bash

shutdown="shutdown"
reboot="reboot"
lock="lock"
hibernate="hibernate"

options="$lock\n$hibernate\n$shutdown\n$reboot"

chosen="$(echo -e "$options" | tofi)"
case $chosen in
    "$lock")
        lock
        ;;
    "$shutdown")
        systemctl poweroff
        ;;
    "$hibernate")
        systemctl hibernate
        ;;
    "$reboot")
        systemctl reboot
        ;;
esac
