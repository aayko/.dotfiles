set statusbar-h-padding 0
set statusbar-v-padding 0
set selection-clipboard clipboard
set guioptions none
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map b navigate previous
map f navigate next
map <Left> navigate previous
map <Right> navigate next
map <C-k> navigate previous
map <C-j> navigate next
set scroll-full-overlap 0.01
set scroll-step 100
map K zoom in
map J zoom out
map i recolor
map <C-p> print

set default-bg "#0f0f0f" #00
set default-fg "#aaaaaa" #01

set statusbar-fg "#B0B0B0" #04
set statusbar-bg "#202020" #01

